<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/photo_id"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:contentDescription="@string/wallpaper"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/picture_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/photo_author_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:padding="4dp"
                android:textSize="16sp"
                tools:text="Author Name"/>

            <TextView
                android:id="@+id/photo_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="4dp"
                android:textSize="16sp"
                tools:text="Likes"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/favourite_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0.2"
            android:contentDescription="@string/favourite_image_icon"
            android:src="@drawable/ic_favorite_border_white"/>
    </LinearLayout>

</LinearLayout>
